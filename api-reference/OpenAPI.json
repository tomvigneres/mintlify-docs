{
  "openapi": "3.0.3",
  "info": {
    "title": "Fructu API",
    "description": "API pour créer un lead",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://api.fructu.co"
    }
  ],
  "paths": {
    "/v1/lead": {
      "post": {
        "summary": "Créer un lead",
        "description": "Crée un nouveau lead dans Fructu.",
        "operationId": "createLead",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": false,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "firstname": {
                    "type": "string",
                    "description": "Prénom du Lead."
                  },
                  "lastname": {
                    "type": "string",
                    "description": "Nom du Lead."
                  },
                  "email": {
                    "type": "string",
                    "format": "email",
                    "description": "Adresse Email du Lead."
                  },
                  "phone": {
                    "type": "string",
                    "description": "Numéro de téléphone du Lead."
                  },
                  "status": {
                    "type": "string",
                    "description": "Statut actuel du Lead. Le statut doit exister dans votre workspace."
                  },
                  "note": {
                    "type": "string",
                    "description": "Renseignez ce paramètre pour attacher une note à ce Lead."
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Lead créé avec succès",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Requête invalide – paramètres malformés"
          },
          "401": {
            "description": "Non autorisé – clé API manquante ou invalide"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    }
  }
}
